<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pictureTop"
    android:layout_width="@dimen/margin_circleImage"
    android:layout_height="@dimen/margintop_height"
    cardview:cardCornerRadius="@dimen/cornerRadius_lite"
    android:layout_marginBottom="@dimen/marginTopButton"
    android:layout_margin="@dimen/marginCard"
    cardview:cardBackgroundColor="@color/background_cardview"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margintop_height"
        >

        <ImageView
            android:id="@+id/id_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margintop_height"
            android:scaleType="centerCrop"
            />

    </FrameLayout>

</android.support.v7.widget.CardView>